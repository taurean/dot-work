---
// Import styles
import "../styles/stylebase.css";

// Get the current URL
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Default meta values that work for the entire site
const {
    title = "Taurean.work",
    description = "Taurean Bryant - Product Design Engineer exploring the intersection of design and technology",
    image = "/og-image.png", // Default Open Graph image for social sharing
    type = "website",
    robots = "index, follow",
} = Astro.props;

// Full image URL 
const ogImageUrl = new URL(image, Astro.site).toString();
---

<head>
    <!-- Essential meta tags that apply to all pages -->
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#3E4458" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO meta tags with sensible defaults -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <meta name="robots" content={robots} />
    
    <!-- Open Graph / Facebook - these same defaults apply to all pages but can be overridden -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    
    <!-- Analytics that applies to every page -->
    <script
        is:inline
        defer
        src="https://api.pirsch.io/pa.js"
        id="pianjs"
        data-code="onSiLVyJIB8svrdlACirr2WQ2a4L1Ons"></script>
    
    <!-- Allow additional head elements to be injected -->
    <slot />
</head>
